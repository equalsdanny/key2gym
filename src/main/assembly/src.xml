<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>

	<baseDirectory>.</baseDirectory>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.key2gym:key2gym-client</include>
			</includes>
			<outputDirectory>client</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<outputDirectory>schema</outputDirectory>
			<includes>
				<include>org.key2gym:key2gym-database-schema</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>org.key2gym:key2gym-docs</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>legal</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>

</assembly>
