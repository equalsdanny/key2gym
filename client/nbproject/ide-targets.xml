<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Key2Gym-Client-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#debugj2se) -->
    <target depends="init" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="Key2Gym-Client" transport="dt_socket"/>
        <java dir="${dist.dir}" fork="true" jar="${dist.dir}/${jar.file}">
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
